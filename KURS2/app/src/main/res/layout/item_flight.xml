<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/ivFlightIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/depart"
        android:contentDescription="Иконка рейса"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvFlightNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Номер рейса"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/ivFlightIcon"
        app:layout_constraintTop_toTopOf="@id/ivFlightIcon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tvFlightTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Время вылета"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvFlightNumber"
        app:layout_constraintTop_toBottomOf="@id/tvFlightNumber"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/tvFlightDestination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Направление"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/tvFlightNumber"
        app:layout_constraintTop_toBottomOf="@id/tvFlightTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ivFlightIcon"/>
</androidx.constraintlayout.widget.ConstraintLayout>